@model EnglishWeb.Models.Vocabulary

@{
    ViewBag.Title = "Edit Vocabulary";
}

<h2>Edit Vocabulary</h2>

@using (Html.BeginForm("Edit", "Vocabulary", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.WordId)
    @Html.HiddenFor(m => m.LessonId)

    <div class="form-group">
        @Html.LabelFor(m => m.Word)
        @Html.TextBoxFor(m => m.Word, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Definition)
        @Html.TextAreaFor(m => m.Definition, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Example)
        @Html.TextAreaFor(m => m.Example, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Current Pronunciation (if any):</label><br />
        @if (!string.IsNullOrEmpty(Model.PronunciationUrl))
        {
            <audio controls>
                <source src="@Model.PronunciationUrl" type="audio/mpeg" />
                Your browser does not support the audio element.
            </audio>
            <br />
            <small>@Model.PronunciationUrl</small>
        }
        else
        {
            <span>No pronunciation uploaded.</span>
        }
    </div>

    <div class="form-group">
        <label>Replace Pronunciation File (MP3)</label>
        <input type="file" name="pronunciationFile" class="form-control" accept=".mp3" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back", "Detail", new { id = Model.LessonId }, new { @class = "btn btn-default" })
}
