@model EnglishWeb.Models.Vocabulary

@{
    ViewBag.Title = "Delete Vocabulary";
}

<h2>Are you sure you want to delete this word?</h2>

<div>
    <h4>@Model.Word</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Definition</dt>
        <dd class="col-sm-10">@Model.Definition</dd>

        <dt class="col-sm-2">Example</dt>
        <dd class="col-sm-10">@Model.Example</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Vocabulary", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.WordId)

        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Detail", new { id = Model.LessonId }, new { @class = "btn btn-secondary" })
    }
</div>
