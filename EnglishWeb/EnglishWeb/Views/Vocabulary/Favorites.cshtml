@model List<EnglishWeb.Models.Vocabulary>

@{
    ViewBag.Title = "My Favorite Vocabulary";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <thead>
        <tr>
            <th>Word</th>
            <th>Definition</th>
            <th>Example</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Word</td>
                <td>@item.Definition</td>
                <td>@item.Example</td>
                <td>
                    @using (Html.BeginForm("RemoveFromFavorites", "Vocabulary", FormMethod.Post))
                    {
                        @Html.Hidden("wordId", item.WordId)
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    }
                    @Html.ActionLink("Back to Lessons", "Index", "Vocabulary", null, new { @class = "btn btn-default" })

                </td>
            </tr>
        }
    </tbody>
</table>
