@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .about-container {
        max-width: 900px;
        margin: auto;
        padding: 40px;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .about-title {
        font-size: 28px;
        font-weight: bold;
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
    }

    .about-text {
        font-size: 16px;
        line-height: 1.6;
        color: #333;
        text-align: center;
    }

    .about-image img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
    }

    .about-content h3 {
        color: #007bff;
        font-weight: bold;
        margin-top: 20px;
    }
</style>

<div class="container mt-5">
    <div class="about-container">
        <h1 class="about-title">About Us</h1>
        <p class="about-text">
            We are an online English learning platform offering diverse and interactive lessons to help you improve your listening, speaking, reading, and writing skills effectively and flexibly anytime, anywhere. With modern teaching methods and rich resources, we are here to support you on your journey to mastering English.
        </p>
    </div>
</div>
