@model EnglishWeb.Models.Lesson

@{
    ViewBag.Title = "Tạo bài học mới";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Lesson", FormMethod.Post, new { enctype = "multipart/form-data" })) // thêm enctype
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4 })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Loại bài học", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("TypeId", (SelectList)ViewBag.TypeId, "-- Chọn loại bài học --", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TypeId, "", new { @class = "text-danger" })
        </div>

        <!-- Phần chọn ảnh và preview -->
        <div class="form-group">
            @Html.Label("Ảnh đại diện bài học", htmlAttributes: new { @class = "control-label" })
            <input type="file" name="imageFile" id="imageFile" accept="image/*" class="form-control" />
            <br />
            <img id="imgPreview" style="max-width:300px; max-height:300px; display:none; border:1px solid #ccc; padding:5px;" />
        </div>

        <div class="form-group">
            <input type="submit" value="Tạo bài họcz" class="btn btn-success" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}

@section Scripts {
    <script>
        document.getElementById('imageFile').addEventListener('change', function (event) {
            var file = event.target.files[0];
            var imgPreview = document.getElementById('imgPreview');
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    imgPreview.src = e.target.result;
                    imgPreview.style.display = "block";
                }
                reader.readAsDataURL(file);
            } else {
                imgPreview.src = "";
                imgPreview.style.display = "none";
            }
        });
    </script>
}
